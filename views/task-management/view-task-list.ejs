<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Task List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table-hover tbody tr:hover {
      background-color: #f8f9fa;
    }

    .status-badge {
      font-size: 0.85rem;
      padding: 0.4em 0.6em;
    }
  </style>
</head>

<body class="bg-light">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6">
          <h2 class="mb-4 text-primary">ðŸ“‹ Task List</h2>
        </div>
        <div class="col-md-6">
          <a href="/task-management/create-task-form" class="btn btn-primary float-end" target="_blank">Create
            Task</a>

        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="container">
        <div class="table-responsive shadow-sm rounded">
          <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Task Name</th>
                <th>Task Description</th>
                <th>Task Priority</th>
                <th>Assigned To</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% taskList.forEach((task, index)=> { %>
                <tr>
                  <td>
                    <%= index + 1 %>
                  </td>
                  <td>
                    <%= task.task_name %>
                  </td>
                  <td>
                    <%= task.task_description %>
                  </td>
                  <td>
                    <%= task.task_priority %>
                  </td>
                  <td>
                    <%= task.task_assigned_to.user_name %> (<%= task.task_assigned_to.user_email %>)
                  </td>
                  <td>
                    <%= new Date(task.due_date).toLocaleDateString() %>
                  </td>
                  <td>
                    <% if(task.task_status==='Pending' ) { %>
                      <span class="badge bg-secondary status-badge">Pending</span>
                      <% } else if(task.task_status==='In-Progress' ) { %>
                        <span class="badge bg-warning status-badge">In Progress</span>
                        <% }else{ %>
                          <span class="badge bg-success status-badge">Completed</span>
                          <% } %>
                  </td>
                  <td>
                    <a href="edit?id = <%= task._id %>" class="btn btn-sm btn-warning">Edit</a>
                    <a href="delete?id = <%= task._id %>" class="btn btn-sm btn-danger"
                      onclick="return confirm('Are you sure?')">Delete</a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>